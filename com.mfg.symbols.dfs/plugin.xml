<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="com.mfg.persist.workspaceStorageReference">
      <workspaceStorageReference
            class="com.mfg.symbols.dfs.persistence.DFSStorageReference">
      </workspaceStorageReference>
      <workspaceStorageReference
            class="com.mfg.symbols.dfs.persistence.DFSProfileStorageReference">
      </workspaceStorageReference>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="com.mfg.symbols.dfs.ui.DFSContentProvider"
            id="com.mfg.symbols.dfs.ui.navigatorContent"
            labelProvider="com.mfg.symbols.dfs.ui.DFSLabelProvider"
            name="DFS Symbols">
         <triggerPoints>
            <instanceof
                  value="com.mfg.symbols.ui.views.ISymbolNavigatorRoot">
            </instanceof>
         </triggerPoints>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="com.mfg.symbols.ui.views.navigator">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="com.mfg.symbols.dfs.ui.navigatorContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.mfg.symbols.dfs.ui.editors.DFSEditor"
            default="false"
            icon="platform:/plugin/com.mfg.symbols/icons/symbol.png"
            id="com.mfg.symbols.dfs.ui.editor"
            name="DFS Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="com.mfg.symbols.dfs.configurations.DFSConfiguration"
            class="com.mfg.symbols.dfs.ui.adapters.DFSConfigurationAdapterFactory">
         <adapter
               type="com.mfg.symbols.jobs.ISymbolJobFactory">
         </adapter>
         <adapter
               type="com.mfg.ui.editors.IEditable">
         </adapter>
      </factory>
      <factory
            adaptableType="com.marketforecastgroup.dfsa.ui.Perspective"
            class="com.mfg.symbols.dfs.ui.adapters.DFSAPerspectiveAdapter">
         <adapter
               type="com.mfg.ui.IMFGPerspectiveFactory">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:com.mfg.symbols.ui.views.navigator?after=additions">
         <separator
               name="com.mfg.symbols.dfs.menu.refreshseparator"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.refresh"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.mfg.symbols.dfs.commands.RefreshSymbolsHandler"
            commandId="org.eclipse.ui.file.refresh">
      </handler>
   </extension>
   <extension
   		id=""
         name="DFS Symbols"
         point="com.mfg.logger.application.components">
      <component
            id="com.mfg.symbols.dfs.logger"
            name="DFS Symbols">
      </component>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.mfg.symbols.dfs.ui.DFSSimulatorControlView"
            id="com.mfg.symbols.dfs.ui.views.simulator"
            name="DFS Simulator Control">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.mfg.application.perspective">
         <view
               id="com.mfg.symbols.dfs.ui.views.simulator"
               minimized="false"
               ratio="0.3"
               relationship="bottom"
               relative="com.mfg.symbols.ui.views.navigator"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
