<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.mfg.strategy.builder.StrategyPerspective"
            icon="icons/wrench.png"
            id="com.mfg.strategy.builder.perspective"
            name="Strategy Builder">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.mfg.strategy.builder.perspective">
         <view
               id="com.mfg.strategy.builder.views.StrategyNavigator"
               minimized="false"
               ratio="0.5"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="com.mfg.strategy.builder.ui.GeneralStrategyStettingsView"
               minimized="false"
               relationship="stack"
               relative="com.mfg.strategy.builder.views.StrategyNavigator"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.mfg.strategy.builder.ui.StrategyBuilderEditor"
            contributorClass="com.mfg.strategy.builder.ui.StrategyGraphicalEditorActionBarContributor"
            default="true"
            extensions="com.mfg.strategy.builder.MultiActionBarContributor"
            icon="icons/automatic.ico"
            id="com.mfg.strategy.builder.ui.StrategyBuilderEditor"
            name="Strategy Builder Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.mfg.strategy.builder.views.StrategyNavigator"
            icon="icons/navigator.gif"
            id="com.mfg.strategy.builder.views.StrategyNavigator"
            name="Strategies Navigator">
      </view>
      <view
            class="com.mfg.strategy.builder.ui.GeneralStrategyStettingsView"
            id="com.mfg.strategy.builder.ui.GeneralStrategyStettingsView"
            name="General Settings">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.mfg.strategy.builder.category"
            defaultHandler="com.mfg.strategy.builder.commands.NewStrategyHandler"
            description="New Strategy"
            id="com.mfg.strategy.builder.commands.newstrategy"
            name="New Strategy">
      </command>
      <category
            id="com.mfg.strategy.builder.category"
            name="Strategy">
      </category>
      <command
            categoryId="com.mfg.strategy.builder.category"
            defaultHandler="com.mfg.strategy.builder.commands.ImportStrategyHandler"
            id="com.mfg.strategy.builder.commands.import"
            name="Import Strategy">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="com.mfg.strategy.builder.views.StrategyContentProvider"
            id="com.mfg.strategy.navigatorContent"
            labelProvider="com.mfg.strategy.builder.views.StrategyLabelProvider"
            name="Strategies">
         <triggerPoints>
            <equals
                  value="com.mfg.strategy.builder.views.StrategyViewContentProvider.root">
            </equals>
         </triggerPoints>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="com.mfg.strategy.builder.views.StrategyNavigator">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="com.mfg.strategy.navigatorContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:com.mfg.strategy.builder.views.StrategyNavigator">
         <command
               commandId="com.mfg.strategy.builder.commands.newstrategy"
               icon="icons/sample2.gif"
               style="push">
         </command>
         <command
               commandId="com.mfg.strategy.builder.commands.import"
               icon="icons/import.gif"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="com.mfg.symbols.strategies">
      <strategyFactory
            class="com.mfg.strategy.builder.AutomaticStrategyFactory"
            id="com.mfg.strategy.builder.strategyFactory"
            name="Automatic">
      </strategyFactory>
   </extension>
   <extension
         point="com.mfg.persist.workspaceStorageReference">
      <workspaceStorageReference
            class="com.mfg.strategy.builder.persistence.StrategyBuilderStorageReference">
      </workspaceStorageReference>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="com.mfg.strategy.builder.model.StrategyInfo"
            class="com.mfg.strategy.builder.adapters.StrategyInfoAdapterFactory">
         <adapter
               type="com.mfg.ui.editors.IEditable">
         </adapter>
      </factory>
   </extension>

</plugin>
